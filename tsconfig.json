{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2019"
    ],
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
